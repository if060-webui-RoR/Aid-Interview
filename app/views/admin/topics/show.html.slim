h1
  = @topic.title
- unless @topic.id == 1
  .row
    .col-sm-1
      = link_to 'Edit topic', edit_admin_topic_path, class: 'btn btn-warning'
    .col-sm-1
      = link_to 'Delete topic', admin_topic_path(@topic), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
table
  tr
    th
      | Content
    th
      | Text
  = render @questions
