<tr>
  <td><%= question.content %></td>
  <td class="button-down"><button type="button" class="btn btn-pill btn-warning">
    <%= link_to 'Show', question_path(question) %></button>
  </td>
  <td class="button-down"><button type="button" class="btn btn-pill btn-warning">
    <%= link_to 'Edit', edit_question_path(question) %></button>
  </td>
  <td class="button-down"><button type="button" class="btn btn-pill btn-warning">
    <%= link_to 'Destroy', question_path(question),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></button>
  </td>
</tr>