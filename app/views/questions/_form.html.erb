<%= form_for(@question) do |f| %>
    <%= render 'shared/error_messages', object: f.object%>

    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>

    <%= f.label :answer %>
    <%= f.text_field :answer, class: 'form-control' %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>