h1
  | New Topic
= form_for(@topic) do |f|
  - if @topic.errors.any?
    #error_explanation
      h2
        = pluralize(@topic.errors.count, 'error')
        |  prohibited this topic $ 
      ul
        - @topic.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :title
    br
    = f.text_field :title
    p#notice
      = notice
  .actions
    = f.submit 'Create topic'
    = link_to 'Back', topics_path
